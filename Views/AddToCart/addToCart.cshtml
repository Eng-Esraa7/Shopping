        <h2>In Your Cart</h2>
        <h2 style="margin-top:50px">Total you Should Pay: @ViewBag.total$</h2>
        @Html.ActionLink("Check Out", "Newcheck", "AddToCart", new { total = @ViewBag.total }, new { @class = "btn btncart", style = "margin-bottom:30px;margin-left:5%" })
        <h2>Dresses</h2>
        <table class="table tab-content table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Photo Of Category</th>
                    <th>Price</th>
                    <th>No of Category</th>
                    <th>Delete From cart</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    if (d.UserId == User.Identity.GetUserId() && d.check == false && d.nameCategory == "dresses")
                    {
                        <tr>
                            <td><img src="~/uploadFiles/@d.photo" /></td>
                            <td>@d.price</td>
                            <td>@d.noCategory</td>
                            <td>@Html.ActionLink("Delete", "DeleteFromCart", "AddToCart", new { id = d.id, name = "dresses" }, new { @class = "btn btncart", Style = "margin-left:18%;margin-top:1%" })</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
