@model IEnumerable<Shopping.Models.infoOfCart>
@using Microsoft.AspNet.Identity
@{

    ViewBag.Title = "addToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/contact.css" rel="stylesheet" />
