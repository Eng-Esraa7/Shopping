@model Shopping.Models.ViewModelCategory
@{
ViewBag.Title = "New";
}
    <section class="add">
        <h2 class="margin btnstyle formAdd">New Dress</h2>
        @using (Html.BeginForm("Save", "Dresses", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.ValidationSummary(true, "Please Fix The Following Erorrs.", new { @class = "center" })
            <label for="photo">Photo</label>
            <input type="file" class="form-control" name="file"/>
            @*@Html.EditorFor(model => model.photo, new { htmlAttributes = new { @class = "form-control", @type = "file" } })*@
            @Html.ValidationMessageFor(m => m.dress.photo)

            <div class="form-group">
                <label for="Email">Old Price</label> $
                @Html.TextBoxFor(c => c.dress.oldPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.dress.oldPrice)
            </div>

            <div class="form-group">
                <label for="phone">New Price</label> $
                @Html.TextBoxFor(c => c.dress.newPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.dress.newPrice)
            </div>

            <div class="form-group">
                <label for="Location">Description</label>
                @Html.TextBoxFor(c => c.dress.description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.dress.description, "Description field is required, It Should Contain The Color Of Category")
            </div>

            @Html.HiddenFor(m => m.dress.id);
            <div>
                <button type="submit" class="btn">Add</button>
                | @Html.ActionLink("Back", "Dresses", "Dresses", new { @class = "btn" })
            </div>
        }
    </section>
