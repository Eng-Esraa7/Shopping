@model Shopping.Models.ViewModelCategory
@{
    ViewBag.Title = "New";
}

<section class="add">
    <h2 class="margin btnstyle formAdd">Edit Shirt</h2>
    @Html.ValidationSummary(true, "Please Fix The Following Erorrs.", new { @class = "center" })
    @using (Html.BeginForm("SaveEdit", "Shirts", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="Name">Photo</label>
            <input type="file" class="form-control" name="file" />
            @Html.ValidationMessageFor(m => m.shirts.photo)
        </div>

        <div class="form-group">
            <label for="Email">Old Price</label> $
            @Html.TextBoxFor(c => c.shirts.oldPrice, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.shirts.oldPrice)
        </div>

        <div class="form-group">
            <label for="phone">New Price $</label>
            @Html.TextBoxFor(c => c.shirts.newPrice, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.shirts.newPrice)
        </div>

        <div class="form-group">
            <label for="Location">Description</label>
            @Html.TextBoxFor(c => c.shirts.description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.shirts.description, "Description field is required, It Should Contain The Color Of Category")
        </div>


        @Html.HiddenFor(m => m.shirts.id);
        <div>
            <button type="submit" class="btn">Edit</button>
            | @Html.ActionLink("Back", "shirts", "Shirts", new { @class = "btn" })
        </div>
    }
</section>
